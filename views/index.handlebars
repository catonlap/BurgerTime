<h1>BurgerTime</h1>

<h2>Items on the Menu</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Items not on the Menu</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Menu Items</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Item Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <input type="radio" name="sleepy" value="1" checked> On Menu<br>
    <input type="radio" name="sleepy" value="0"> Off Menu
  </div>

  <button type="submit">Add Menu Item</button>
</form>
